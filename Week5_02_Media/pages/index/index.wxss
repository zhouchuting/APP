/**index.wxss**/
.mainViewClass {
  width: 100%;
}

.container {
  width: 100%;
  height: 1200rpx;
}

.container scroll-view{
  width: 750rpx;
  height: 100%;
  white-space: nowrap;
  display: flex;
}

.item {
  display: inline-block;
  vertical-align:top;
  top: 0;
  width: 730rpx;
  height: 100%;
  margin: 10rpx 10rpx;
  overflow: visible;
}

view.item image {
  display: block;
  width:100%;
    border-radius: 20rpx;
    box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1)
}

view.item video {
  width: 100%;
    border-radius: 20rpx;
    box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1)
}

view.item text {
    display:-webkit-box;
    overflow:hidden;
    text-overflow:ellipsis;
    word-wrap:break-word;
    -webkit-box-orient:vertical;
    white-space:normal !important;
    background-color: #FFF;
    padding: 12rpx 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1)
}

button {
  width: 300rpx;
  height: 100rpx;
  bottom: 150rpx;
}